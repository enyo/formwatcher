gradient(fallbackColor, args...)
  background-color: fallbackColor;
  gradientColors = unquote(join(',',args))
  background-image: -webkit-linear-gradient(top, gradientColors); // Chrome 10+, Saf5.1+, iOS 5+
  background-image:    -moz-linear-gradient(top, gradientColors); // FF3.6
  background-image:     -ms-linear-gradient(top, gradientColors); // IE10
  background-image:      -o-linear-gradient(top, gradientColors); // Opera 11.10+
  background-image:         linear-gradient(top, gradientColors);


body
  line-height 140%
  color #333

body
input
button
  font-family "Lato", arial, tahoma, sans-serif
  font-size 14px


#container
  width 600px
  margin 50px auto

  #main

    h1
      margin 60px 0 30px 0
      font-size 3em
      // font-family georgia
      font-style italic
      font-weight normal
      &:first-of-type
        margin-top 10px

    h2
      font-size 1.5em
      font-weight bold
      margin 60px 0 30px 0

    a
      color blue

    form
      margin 30px 0
      > div
        margin 10px 0

      $height = 30px
      input
      button
        border-radius 2px
        height $height
        border 1px solid #aaa
        box-sizing border-box
        width 200px
        padding 5px 8px
        line-height $height - 10px
        box-shadow 0 1px 2px rgba(0, 0, 0, 0.15)

      button[type="submit"]
        gradient(#84c43d, #b1e76f 0, #8aca3f 2%, #9aca66 50%, #84c43d 50%, #7da351 100%)
        color white
        border-color #7da351
        //font-weight bold
        font-size 15px
        text-shadow 0px 1px 1px rgba(0, 0, 0, 0.6)
        &:hover
          text-shadow 0px 1px 1px rgba(0, 0, 0, 1)
        &:active
          padding-top 6px 
          padding-bottom 4px 

      input.validated
      select.validated
      textarea.validated
        background #eef9ee
        border-color #9a9
      input.error
      select.error
      textarea.error
        background #fff6f6
        border-color #eaa

      .errors
        margin-left 15px
        height $height
        line-height $height
        color #b44

    code 
      color #666
      font-family menlo, monospace
      font-size 12px
      border 1px dashed #ddd
      background #fafafa
      padding 0px 5px
      display inline-block
    pre
      border 1px solid #ddd
      background #fafafa
      padding 6px 10px
      overflow auto
      > code
        border none
        padding none
        background transparent



  footer
    margin-top 150px
    color #aaa
    text-align justify
    a
      color @color
